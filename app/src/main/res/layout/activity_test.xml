<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTitle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_scrollFlags="scroll"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="match_parent"
                    android:background="#979797"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="280dp">
                </ImageView>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clScore"
                    android:background="#F4F1DB"
                    android:layout_marginTop="53dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvScore"
                    android:textSize="30sp"
                    android:textColor="#f00"
                    app:layout_constraintTop_toTopOf="@id/clScore"
                    app:layout_constraintBottom_toBottomOf="@id/clScore"
                    app:layout_constraintLeft_toLeftOf="@id/clScore"
                    app:layout_constraintRight_toRightOf="@+id/clScore"
                    android:text="500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <View
                    android:id="@+id/vBg0"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/clScore"
                    android:background="#F5F6F8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="0dp">
                </View>

                <View
                    android:id="@+id/vBg1"
                    android:layout_width="0dp"
                    app:layout_constraintTop_toTopOf="@id/vBg0"
                    app:layout_constraintBottom_toBottomOf="@id/vBg0"
                    app:layout_constraintLeft_toLeftOf="@id/vBg0"
                    android:background="@android:color/white"
                    app:layout_constraintRight_toRightOf="@id/vBg0"
                    android:layout_margin="15dp"
                    android:layout_height="0dp">
                </View>

                <TextView
                    android:id="@+id/tvHint"
                    android:layout_width="wrap_content"
                    android:text="待领取成长值"
                    android:padding="15dp"
                    app:layout_constraintTop_toTopOf="@id/vBg1"
                    app:layout_constraintLeft_toLeftOf="@id/vBg1"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/tvScore0"
                    android:drawableTop="@android:drawable/ic_menu_help"
                    android:drawableTint="#f00"
                    app:layout_constraintTop_toBottomOf="@id/tvHint"
                    app:layout_constraintLeft_toLeftOf="@id/vBg1"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/vBg1"
                    app:layout_constraintRight_toLeftOf="@id/tvScore1"
                    android:text="发布房源\n20"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/tvScore1"
                    android:drawableTop="@android:drawable/ic_menu_help"
                    android:drawableTint="#f00"
                    app:layout_constraintTop_toTopOf="@id/tvScore0"
                    app:layout_constraintLeft_toRightOf="@id/tvScore0"
                    app:layout_constraintRight_toLeftOf="@id/tvScore2"
                    android:text="发布房源\n20"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/tvScore2"
                    android:drawableTop="@android:drawable/ic_menu_help"
                    android:drawableTint="#f00"
                    app:layout_constraintTop_toTopOf="@id/tvScore0"
                    app:layout_constraintLeft_toRightOf="@id/tvScore1"
                    app:layout_constraintRight_toLeftOf="@id/tvScore3"
                    android:text="发布房源\n20"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView
                    android:id="@+id/tvScore3"
                    android:drawableTop="@android:drawable/ic_menu_help"
                    android:drawableTint="#f00"
                    app:layout_constraintTop_toTopOf="@id/tvScore0"
                    app:layout_constraintLeft_toRightOf="@id/tvScore2"
                    app:layout_constraintRight_toRightOf="@id/vBg1"
                    android:text="发布房源\n20"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>




        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:text="任任务任任任任任任任务任任任任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务务任务任务务务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务任任务任务任务任务务务任务任务务"
                android:layout_height="match_parent">
            </TextView>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>